{
  "name": "@meojs/utc",
  "version": "1.0.0",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "description": "Meo's unified development toolchain.",
  "author": {
    "name": "SmallMain",
    "email": "smallmain@outlook.com",
    "url": "https://www.smallmain.com/"
  },
  "homepage": "https://www.smallmain.com/",
  "repository": "github:meo-js/utc",
  "bugs": "https://github.com/meo-js/utc/issues",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "utc": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.mjs",
      "require": "./dist/lib.cjs",
      "types": "./dist/lib.d.ts"
    }
  },
  "files": [
    "assets",
    "dist",
    "README*.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun src/cli.ts",
    "start:init": "bun src/cli.ts init --project=./example",
    "start:lint": "bun src/cli.ts lint",
    "publish:patch": "pnpm version patch && pnpm publish",
    "publish:minor": "pnpm version minor && pnpm publish",
    "publish:major": "pnpm version major && pnpm publish"
  },
  "peerDependencies": {
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "stylelint": {
      "optional": true
    }
  },
  "dependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^19.8.1",
    "@commitlint/lint": "^19.8.1",
    "@commitlint/load": "^19.8.1",
    "@inquirer/prompts": "^7.8.1",
    "@meojs/cfgs": "^2.0.35",
    "@meojs/pkg-utils": "^1.0.3",
    "c12": "^3.2.0",
    "glob": "^11.0.3",
    "minimatch": "^10.0.3",
    "nano-spawn": "^1.0.2",
    "publint": "^0.3.12",
    "simple-git-hooks": "^2.13.1",
    "ts-morph": "^26.0.0",
    "tsdown": "^0.14.1",
    "unplugin": "^1.16.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/braces": "^3.0.5",
    "@types/node": "~20.19.0",
    "@types/yargs": "^17.0.33",
    "prettier-plugin-organize-imports": "^4.2.0"
  }
}
