  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Init",
      "program": "${workspaceFolder}/src/cli.ts",
      "cwd": "${workspaceFolder}/example",
      "args": [
        "init",
      ],
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Lint",
      "program": "${workspaceFolder}/src/cli.ts",
      "cwd": "${workspaceFolder}/example",
      "args": [
        "lint",
        "-m abc"
      ],
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Build",
      "program": "${workspaceFolder}/src/cli.ts",
      "cwd": "${workspaceFolder}/example",
      "args": [
        "build"
      ],
      "stopOnEntry": false,
      "watchMode": false
    },
  ]
}
